@model IEnumerable<BeachSys.Models.Armario>

@{
    ViewData["Title"] = "Index";
}
<h1>Armarios</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Regiao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PontoX)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PontoY)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Regiao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PontoX)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PontoY)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ArmarioId">Vizualizar Compartimentos</a>
                @*<a asp-action="Details" asp-route-id="@item.ArmarioId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ArmarioId">Delete</a>*@
            </td>
        </tr>
}
    </tbody>
</table>
